# F1 Undercut Simulator Environment Configuration
# Copy this file to .env and fill in the appropriate values

# =============================================================================
# BACKEND CONFIGURATION (FastAPI)
# =============================================================================

# API Server Configuration
API_HOST=localhost
API_PORT=8000
DEBUG=True

# External API URLs
OPENF1_API_URL=https://api.openf1.org/v1
JOLPICA_API_URL=https://jolpica-f1-api.com/v1

# CORS Configuration (JSON array format)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Logging Configuration
LOG_LEVEL=INFO

# Performance Configuration
# Set to 'true' to use cached features and skip model refitting
FAST_MODE=false

# =============================================================================
# MONITORING & OBSERVABILITY (SENTRY)
# =============================================================================

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/[org]/projects/[project]/keys/
# SENTRY_DSN=https://your-dsn@o12345.ingest.sentry.io/67890

# Sentry Environment (development, staging, production)
SENTRY_ENVIRONMENT=development

# Performance Monitoring Sample Rates (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# =============================================================================
# FRONTEND CONFIGURATION (Next.js)
# =============================================================================

# Sentry Configuration (Frontend)
# Set to 'true' to enable Sentry error tracking
NEXT_PUBLIC_ENABLE_SENTRY=false

# Frontend Sentry DSN (can be same as backend)
# NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@o12345.ingest.sentry.io/67890

# Frontend Sentry Environment
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Frontend Performance Monitoring
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# SENTRY SOURCE MAP UPLOADS (OPTIONAL)
# =============================================================================

# For production builds with source map uploads
# SENTRY_ORG=your-organization
# SENTRY_PROJECT=your-project

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================

# 1. Never commit .env to version control
# 2. For production, use environment-specific configuration
# 3. Sentry DSN is optional - app works without monitoring
# 4. Set NEXT_PUBLIC_ENABLE_SENTRY=true to activate frontend monitoring